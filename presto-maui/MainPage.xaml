<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:drawable="clr-namespace:presto_maui" x:Class="presto_maui.MainPage">
        <ContentPage.Resources>
                <drawable:ScoreDrawable x:Key="drawable"/>
        </ContentPage.Resources>

        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Start" HorizontalOptions="StartAndExpand">
                <GraphicsView Drawable="{StaticResource drawable}" HeightRequest="300" WidthRequest="400"/>
        </VerticalStackLayout>

</ContentPage>
