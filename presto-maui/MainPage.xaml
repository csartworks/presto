<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:drawable="clr-namespace:presto_maui" x:Class="presto_maui.MainPage">
    <ContentPage.Resources>
        <drawable:ScoreDrawable x:Key="score"/>
    </ContentPage.Resources>

    <VerticalStackLayout HorizontalOptions="Start" Margin="100,100,100,100">
        <GraphicsView Drawable="{StaticResource score}" HeightRequest="500" WidthRequest="500"/>
    </VerticalStackLayout>

</ContentPage>
